{
  "npmClient": "npm",
  "version": "0.2.1",
  "useWorkspaces": true,
  "command": {
    "version": {
      "conventionalCommits": true
    },
    "publish": {
      "ignoreChanges": [
        "*.md",
        "**/test/**"
      ],
      "message": "chore(release): publish"
    }
  },
  "packages": [
    "packages/*"
  ],
  "changelog": {
    "labels": {
      "feat": ":rocket: New Feature",
      "bug": ":bug: Bug Fix",
      "doc": ":memo: Documentation",
      "internal": ":house: Internal",
      "breaking": ":boom: Breaking Change"
    }
  }
}
