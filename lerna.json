{
  "npmClient": "npm",
  "version": "independent",
  "useWorkspaces": true,
  "command": {
    "version": {
      "//": "通过常规提交确定版本",
      "conventionalCommits": false
    },
    "publish": {
      "ignoreChanges": [
        "*.md",
        "**/test/**"
      ],
      "message": "chore(release): publish"
    }
  },
  "packages": [
    "packages/*"
  ],
  "changelog": {
    "labels": {
      "feat": ":rocket: New Feature",
      "bug": ":bug: Bug Fix",
      "doc": ":memo: Documentation",
      "internal": ":house: Internal",
      "breaking": ":boom: Breaking Change"
    }
  }
}
