{
  "npmClient": "npm",
  "version": "0.2.4",
  "useWorkspaces": true,
  "command": {
    "version": {
      "conventionalCommits": true
    },
    "publish": {
      "ignoreChanges": [
        "*.md",
        "**/test/**"
      ],
      "message": "chore(release): publish"
    }
  },
  "packages": [
    "packages/*"
  ]
}
